#include<iostream>
using namespace std;
int main() {
	int h;
	cin >> h;
	for (int i = 1;i <= h;i++) {
		for (int j = h - 1;j >= i;j--) {
			cout << " ";
		}
		for (int j = 1;j <= (2 * i - 1);j++) {
			cout << "*";
		}
		cout << endl;
	}
	for (int i = h;i >= 1;i--) {
		for (int j = h - 1;j >= i;j--) {
			cout << " ";
		}
		for (int j = 1;j <= (2 * i - 1);j++) {
			cout << "*";
		}
		cout << endl;
	}
	return 0;
}



// j -                 12345678h      i
//			   *          1
//			  ***         2 
//			 *****        3 
//			*******       4
//			*******       5
//			 *****        6
//			  ***         7
//			   *          8
