#include<iostream>
using namespace std;
int main() {
	int n;
	cin >> n;
	for (int i = 0;i < n;i++) {
		for (int j = 0;j < n;j++) {
			if (n / 2 == i && n / 2 == j) {
				cout << "X";
			}
			else if (i == j) {
				cout << "\\";
			}
			else if (i == n - 1 - j) {
				cout << "/";
			}
			else {
				cout << "*";
			}
		}
		cout << endl;
	}
	return 0;
}
